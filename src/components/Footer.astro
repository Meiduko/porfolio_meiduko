---
import HomeIcon from '@/assets/icons/HomeIcon.astro'
import ProjectsIcon from '@/assets/icons/ProjectsIcon.astro'
---

<footer
  class='sticky bottom-0 left-0 w-full py-6 mb-4 flex justify-center items-center'
>
  <ul
    class='w-1/3 mx-12 backdrop-blur-xs rounded-full flex flex-row justify-evenly gap-4'
  >
    <li
      class='hover:scale-150 hover:-translate-y-1/2 transition-scale duration-300'
    >
      <a href='/'>
        <HomeIcon class='size-8 md:size-12' />
      </a>
    </li>
    <li
      class='hover:scale-150 hover:-translate-y-1/2 transition-scale duration-300'
    >
      <a href='/'>
        <ProjectsIcon class='size-8 md:size-12' />
      </a>
    </li>
  </ul>
</footer>
