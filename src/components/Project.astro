---
import GithubMark from '@/assets/icons/Github/githubMark.astro'
import { getLangFromUrl } from '@/i18n/utils'
import { type techType, iconMap } from '@/utils/select_icon'

const project = Astro.props.project
const { name, description, thumbnailPath, technologies, repo, Url } = project
const lang = getLangFromUrl(Astro.url)
---

<article class='flex flex-col lg:flex-row gap-8'>
  <div
    class='absolute left-1/12 md:left-2/12 xl:left-3/12 size-3.5 -translate-x-[calc(50%-1.5px)] rounded-full bg-yellow-500'
  >
  </div>
  <img
    src={thumbnailPath}
    class='w-full h-full md:w-1/2 md:h-1/2 lg:w-1/3 lg:h-1/3 rounded-lg aspect-auto'
    alt={`Photo of the project: ${name}`}
  />
  <div>
    <h3 class='text-2xl md:text-3xl font-medium'>{name}</h3>
    <p class='text-lg md:text-xl'>{description[lang]}</p>
    {
      Url && (
        <a
          aria-label={`Visit ${name} site`}
          rel='noopener noreferrer'
          target='_blank'
          class='text-blue-950 dark:text-blue-400 underline'
          href={Url}
        >
          {name} site
        </a>
      )
    }
    <div class='w-full pt-4 flex flex-row justify-between content-center'>
      <ul class='flex flex-row content-center gap-x-4'>
        {
          technologies.map((tech: techType) => {
            const Icon = iconMap[tech]
            return (
              Icon && (
                <li>
                  <Icon title={tech} class='size-6' />
                </li>
              )
            )
          })
        }
      </ul>
      <a
        aria-label={`Visit ${name} repo on GitHub`}
        rel='noopener noreferrer'
        target='_blank'
        href={repo}
      >
        <GithubMark />
      </a>
    </div>
  </div>
</article>
